  <div class="jumbotron jumbotron-extend-login">
    <div class="container-fluid jumbotron-container-login">
       <div class="container login_page">
        <div class="card card-container login_card">
          <h3 class="text-center">ユーザー登録</h3>
          <hr>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
              <%= f.label :name,"ユーザー名" ,class:"sign_up_title" %><br />
              <%= f.text_field :name, autofocus: true, class:"form-control"%>
            </div>
            <div class="field">
              <%= f.label :user_icon,"アイコン画像",class:"sign_up_title" %><br />
              <%= f.file_field :user_icon, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :adress,"住んでいる都道府県",class:"sign_up_title" %><br />
              <%= f.text_field :adress, autofocus: true,class:"form-control", placeholder:"例： 東京" %>
            </div>
            <div class="field">
              <%= f.label :experience,"シェアハウス経験 有/無",class:"sign_up_title" %><br />
              <%= f.select :experience ,[['有',true],['無',false]],class:"form-control" %>
            </div>
            <div class="field">
              <%= f.label :email,class:"sign_up_title" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :password,class:"sign_up_title" %>
              <% if @minimum_password_length %>
              <em class="sign_up_title"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation,class:"sign_up_title" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control"%>
            </div>

            <div class="actions field">
              <%= f.submit t('.sign_up'),class:"btn btn-lg btn-primary btn-block btn-signin mt-3" %>
            </div>
          <% end %>
          <div class="ml-3" >
            <%= render "devise/shared/links" %>
          </div>
    
        </div><!-- /card-container -->
    </div><!-- /container -->
    </div>
  </div>
</div>
