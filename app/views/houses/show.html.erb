<%= render 'house_info' %>
<% if @house.house_image? %>
  <p class="text-center my-5"><%= image_tag @house.house_image.url,style: "height:300px; max-width: 80%"  %></p>
  <% elsif  %>
  <p class="text-center my-5"><img src="/assets/noimage.png" class=" no-image",style="max-width: 80%; height:300px;"  ></p>
<% end %>

<table class="table my-5 show-table" style="max-width: 70%;">
  <tr><th class="bg-light pl-3" >エリア</th><td><%= @house.area.name%></td></tr>
  <tr><th class="bg-light pl-3">世帯数</th><td><%= @house.house_size %>世帯</td></tr>
  <tr><th class="bg-light pl-3">物件投稿者</th><td><%= @house.user.name%></td></tr>
  <tr><th class="bg-light pl-3">その他情報</th><td><%= @house.content%></td></tr>
</table>
<%# 共用設備の表示 %>

<div class="card text-center  p-3 facility-card my-5"style="max-width: 70%;" >
  <h3 class="m-3">共有設備</h3>
  <div class="row">
    <%= render partial: 'facility', locals: { facility: @house.kitchen,icon: "fas fa-utensils ",name:"キッチン"} %>
    <%= render partial: 'facility', locals: { facility: @house.refrigerator,icon: "fas fa-snowflake ",name:"冷蔵庫"} %>
    <%= render partial: 'facility', locals: { facility: @house.laundry,icon: "fas fa-tshirt ",name:"洗濯機"} %>
    <%= render partial: 'facility', locals: { facility: @house.dryer,icon: "fas fa-tshirt ",name:"乾燥機"} %>
  </div>
  <div class="row">
    <%= render partial: 'facility', locals: { facility: @house.toilet,icon: "fas fa-toilet ",name:"トイレ"} %>
    <%= render partial: 'facility', locals: { facility: @house.shower,icon: "fas fa-shower ",name:"シャワー"} %>
    <%= render partial: 'facility', locals: { facility: @house.bathroom,icon: "fas fa-bath ",name:"浴室"} %>
  </div>
  <div class="row">
    <% @facilities.each do |facility| %>
      <div class="col-3">
        <% if @with_facility_ids.include?(facility.id)%>
          <%= image_tag facility.color_icon,  size:'90x90' %> 
          <p class="facility"><%=  facility.name %></p>
        <% else %>
          <%= image_tag facility.icon, size:'90x90' %> 
          <p class="no-facility"><%=  facility.name %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>




