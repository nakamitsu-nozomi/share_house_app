<% if user_signed_in? %>
  <!-- ログイン時 -->
  <nav class="navbar navbar-expand navbar-light bg-light ">
    <%= link_to 'シェアハウス検索サイト',root_path,class: "navbar-brand" %>
    <ul class="navbar-nav  ">
      <li class="nav-item text-center">
        <%= search_form_for(@q,url: houses_path) do |f|%>
          <div class="input-group my-3 d-flex align-items-center mr-6"  >
            <%= f.label "エリアで検索",class:"d-flex align-items-center mr-2" %> 
            <%= f.search_field :area_name_cont, class:"form-control col-12 ",placeholder:"エリア[例：渋谷]" %>
            <%= f.submit "検索" ,class:"btn btn-primary" %>
          </div>
        <% end %>
      </li>
      <li class="dropdown  mr-3 nav-link nav-item text-right">
        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-bars mr-1"></i>
          <%= image_tag current_user.user_icon.url,size: "40x40",class: "icon" %>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <% if current_user.admin?%>
          <%= link_to "新規物件登録", new_house_path,class:"dropdown-item"  %>
        <% end %>
          <%= link_to "保存済み",clips_users_path,class:"dropdown-item" %>
          <%= link_to "レビューした物件", "#",class:"dropdown-item"%>
          <%= link_to "マイページ", users_path(current_user.id),class:"dropdown-item" %>
          <%= link_to "アカウント編集", edit_user_registration_path,class:"dropdown-item" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { confirm: "ログアウトしますか？" },class:"dropdown-item"  %>
  
        </div>
      </li>
    </ul>
  </nav>
<% else %>
  <nav class="navbar navbar-expand navbar-light bg-light ">
    <%= link_to 'シェアハウス検索サイト',root_path,class: "navbar-brand" %>
    <ul class="navbar-nav ">
      <li class="nav-item  text-right">
          <%= link_to "登録物件",new_user_session_path,class:" nav-item nav-link mt-3" %>
      </li>
      <li class="nav-item text-right">
        <%= link_to "レビューした物件",new_user_session_path,class:" nav-item nav-link mt-3" %>
      </li>
      <li class="nav-item text-right">
        <%= link_to "保存済み",new_user_session_path ,class:"nav-item nav-link mt-3" %>
      </li>
      <li class="nav-item text-right">
        <%= link_to "ログイン", new_user_session_path,class:"nav-item nav-link mt-3" %>  
      </li>
    </ul>
  </nav>
<% end %> 